@namespace Moamalat.AdminApp.Components
@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(Routes).Assembly"
        AdditionalAssemblies="new[] {
            typeof(MainLayout).Assembly,
            typeof(Moamalat.Components.MainLayout).Assembly
        }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Moamalat.Components.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Moamalat.Components.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>